<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parameter Widget</title>
    <!-- Include your React widget bundle (JavaScript) here -->
    <script type="text/javascript">
	import React, { useState } from 'react';

const ParameterWidget = () => {
  // Initialize state to manage parameters
  const [parameters, setParameters] = useState([
    { name: 'param1', type: 'string', description: 'First parameter' },
    { name: 'param2', type: 'number', description: 'Second parameter' },
    // Add more parameters as needed
  ]);

  // Function to handle parameter deletion
  const handleDelete = (paramName) => {
    setParameters((prevParams) =>
      prevParams.filter((param) => param.name !== paramName)
    );
  };

  // Render the parameter list
  const renderParameters = () => {
    return parameters.map((param) => (
      <div key={param.name} className="parameter">
        <span className="param-name">{param.name}</span>
        <span className="param-type">{param.type}</span>
        <span className="param-description">{param.description}</span>
        <button onClick={() => handleDelete(param.name)}>Delete</button>
      </div>
    ));
  };

  return (
    <div className="parameter-widget">
      <h2>Parameter List</h2>
      {renderParameters()}
    </div>
  );
};

export default ParameterWidget;
</script>
	
</head>
<body>
    <!-- Create a div with a specific ID where your widget will be rendered -->
    <div id="parameter-widget"></div>

    <script>
        // Initialize your widget (this part is usually done in JavaScript)
        // For demonstration purposes, let's assume you have a function to render the widget
        function renderParameterWidget() {
            const widgetContainer = document.getElementById('parameter-widget');
            // Replace this with your actual widget rendering logic
            // You can use ReactDOM.render() or any other method to render your React component
            // Example: ReactDOM.render(<YourParameterWidget />, widgetContainer);
        }

        // Call the function to render your widget
        renderParameterWidget();
    </script>
</body>
</html>